/*Faça um programa no qual o usuário fornece os valores de temperatura em Fahrenheit e o mesmo converte os valores para Celsius Apresente o resultado (pesquise a fórmula).*/

#include <stdio.h>

int main(void) {

  float fahr, celsius;
  
  printf("Insira a temperatura em fahrenheit: \n");
  scanf("%f", &fahr);
  	
  celsius = (fahr - 32) * 5/9;

  printf("A conversao para Celsius é: %.2f C", celsius);
  
  return 0;
}
